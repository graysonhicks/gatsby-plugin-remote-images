{
  "private": true,
  "workspaces": [
    "site",
    "plugin"
  ],
  "scripts": {
    "test": "jest",
    "watch": "jest --watch",
    "build": "yarn workspace site build",
    "serve": "yarn workspace site serve",
    "develop": "yarn workspace site develop",
    "clean": "yarn workspace site clean",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\""
  },
  "devDependencies": {
    "babel-jest": "27.4.2",
    "babel-preset-gatsby": "2.3.0",
    "jest": "27.4.3",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  },
  "repository": "graysonhicks/gatsby-plugin-remote-images",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}

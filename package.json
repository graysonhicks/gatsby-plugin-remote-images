{
  "name": "gatsby-plugin-remote-images",
  "version": "3.5.0",
  "description": "Gatsby plugin to use gatsby-image on remote images from absolute path string fields on other nodes.",
  "author": "Grayson Hicks <graysonhicks@gmail.com>",
  "main": "gatsby-node.js",
  "files": [
    "gatsby-node.js",
    "README.md"
  ],
  "repository": "graysonhicks/gatsby-plugin-remote-images",
  "keywords": [
    "gatsby",
    "gatsby-plugin",
    "gatsby-image",
    "gatsby-source-filesystem",
    "plugin",
    "images",
    "remote",
    "download",
    "api"
  ],
  "license": "MIT",
  "peerDependencies": {
    "gatsby": "^2.2.0 || ^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "babel-jest": "^29.0.3",
    "babel-preset-gatsby-package": "^3.6.0",
    "cross-env": "^7.0.3",
    "husky": "^3.1.0",
    "jest": "^29.0.3",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "gatsby-source-filesystem": "^4.0.0",
    "lodash": "^4.17.15"
  },
  "scripts": {
    "build": "rimraf ./gatsby-node.js && babel src --out-dir . --ignore **/__tests__",
    "format": "prettier --write **/*.{js,jsx,ts,tsx,json,css,scss,md}",
    "prepare": "cross-env NODE_ENV=production npm run build",
    "watch": "babel -w src --out-dir . --ignore **/__tests__",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "prettier": {
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
